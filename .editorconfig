root = true

# 匹配全部文件
[*]
# 结尾换行符，可选"lf"、"cr"、"crlf"
end_of_line = lf

# 设置字符集
charset = utf-8

# 在文件结尾插入新行
insert_final_newline = true

# 删除一行中的前后空格
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4

# 以下匹配，类同
[Makefile]
indent_style = tab
# tab的宽度
tab_width = 4

[*.json]
# 缩进风格，可选"space"、"tab"
indent_style = space

# 缩进的空格数
indent_size = 2

# 匹配py结尾的文件
[*.{js,css,html,vue,yml}]
indent_style = space
indent_size = 2
